<Page x:Class="Submission_of_Applications_Ерилеев.pages.Parents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_Ерилеев.pages"
      mc:Ignorable="d" d:DesignWidth="900"
      Title="Parents" Height="700">

    <Grid Background="White">

        <!-- ======== ВЕРХНЯЯ ПАНЕЛЬ (НЕ ТРОГАЕМ) ======== -->
        <Grid Margin="0,0,0,530" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0"
               VerticalAlignment="Top" Width="40" Source="/i.webp"/>
            <Label Content="Электронная приемная компания" 
               HorizontalAlignment="Left" Margin="55,1,0,0"
               VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
            <Label Content="МЦК-ЧЭМК Минобразования Чувашии" 
               HorizontalAlignment="Left" Margin="55,24,0,0" VerticalAlignment="Top"/>
        </Grid>

        <!-- ======== ОСНОВНОЙ БЛОК ======== -->
        <ScrollViewer Margin="0,60,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20,10,20,20">

                <TextBlock Text="Сведения о родителях (законных представителях):" 
                           FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                <TextBlock Text="Если родитель один, заполнить данные на одного родителя" 
                           Foreground="Red" FontSize="12" Margin="0,0,0,15"/>

                <!-- Мать -->
                <TextBlock Text="Мать (или законный представитель):" FontWeight="Bold" Margin="0,0,0,10"/>

                <StackPanel>
                    <TextBlock Text="Фамилия, имя, отчество (полностью):"/>
                    <TextBox Margin="0,3,0,10"/>

                    <TextBlock Text="Дата рождения:"/>
                    <DatePicker Margin="0,3,0,10"/>

                    <TextBlock Text="Место работы:"/>
                    <TextBox Margin="0,3,0,10"/>

                    <TextBlock Text="Должность:"/>
                    <TextBox Margin="0,3,0,10"/>

                    <TextBlock Text="Место жительства:"/>
                    <TextBox Margin="0,3,0,10"/>

                    <Grid Margin="0,5,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Домашний телефон:"/>
                            <TextBox Margin="0,3,0,0" Text="(при наличии)"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Мобильный телефон:"/>
                            <TextBox Margin="0,3,0,0" Text="(при наличии)"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Отец -->
                <TextBlock Text="Место жительства:" Margin="0,15,0,5"/>
                <TextBox Margin="0,3,0,10"/>

                <Grid Margin="0,5,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Домашний телефон:"/>
                        <TextBox Margin="0,3,0,0" Text="(при наличии)"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Мобильный телефон:"/>
                        <TextBox Margin="0,3,0,0" Text="(при наличии)"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Место жительства:"/>
                <TextBox Margin="0,3,0,10"/>

                <!-- Подтверждение -->
                <CheckBox Content="Настоящим подтверждаю, что персональные данные на третьих лиц внесены с их согласия"
                          Margin="0,10,0,20" />

                <Button Content="Продолжить" 
                        Click="Button_Click"
                        HorizontalAlignment="Right" 
                        Width="130" Height="30"
                        Background="#E0E0E0" 
                        BorderBrush="#C0C0C0"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
