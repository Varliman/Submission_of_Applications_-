<Page x:Class="Submission_of_Applications_Ерилеев.pages.Education"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_Ерилеев.pages"
      mc:Ignorable="d"
      Title="Education"
      d:DesignHeight="500" d:DesignWidth="450">

    <!-- Общий фон -->
    <Grid Background="#F8F9FA">
        <!-- Верхняя панель -->
        <Grid Height="60" VerticalAlignment="Top" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0"
                   VerticalAlignment="Top" Width="40" Source="/i.webp"/>
            <Label Content="Электронная приемная комиссия"
                   HorizontalAlignment="Left" Margin="55,1,0,0"
                   VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
            <Label Content="МЦК-ЧЭМК Минобразования Чувашии" 
       HorizontalAlignment="Left" Margin="55,24,0,0" VerticalAlignment="Top"/>
        </Grid>

        <!-- Прокрутка содержимого -->
        <ScrollViewer Margin="0,60,0,0" VerticalScrollBarVisibility="Auto">
            <!-- Canvas = элементы остаются на месте -->
            <Canvas Background="#F8F9FA" Height="440" Width="450">

                <Label Content="Сведения об образовании"
                       Canvas.Left="10" Canvas.Top="10"
                       FontWeight="Bold"/>

                <Label Content="База:" Canvas.Left="10" Canvas.Top="40" FontWeight="Bold"/>
                <Label Content="Выберите один из вариантов:" Canvas.Left="10" Canvas.Top="65"
                       Foreground="Red" FontSize="11"/>

                <RadioButton Content="9 классов" Canvas.Left="25" Canvas.Top="85"/>
                <RadioButton Content="11 классов" Canvas.Left="25" Canvas.Top="105"/>
                <RadioButton Content="СПО" Canvas.Left="25" Canvas.Top="125"/>
                <RadioButton Content="ВПО" Canvas.Left="25" Canvas.Top="145"/>

                <Label Content="Выберите один из вариантов:" Canvas.Left="10" Canvas.Top="175"
                       Foreground="Red" FontSize="11"/>
                <RadioButton Content="Аттестат" Canvas.Left="25" Canvas.Top="195"/>
                <RadioButton Content="Диплом" Canvas.Left="25" Canvas.Top="215"/>

                <Label Content="Серия и номер документа об образовании:"
                       Canvas.Left="10" Canvas.Top="249" FontSize="10"/>
                <TextBox Canvas.Left="12" Canvas.Top="275" Width="200" Height="24"/>

                <Label Content="Средний балл (до сотых):"
                       Canvas.Left="245" Canvas.Top="250" FontSize="10"/>
                <TextBox Canvas.Left="245" Canvas.Top="275" Width="150" Height="24"/>

                <Label Content="Прикрепите скан страниц документа об образовании"
                       Canvas.Left="10" Canvas.Top="310" FontSize="11"/>

                <Label Content="Выберите документ"
                       Canvas.Left="10" Canvas.Top="335" Foreground="Red" FontSize="8"/>

                <TextBox Canvas.Left="12" Canvas.Top="360" Width="300" Height="24" TextWrapping="Wrap"/>
                <Button Content="Выбрать..." Canvas.Left="320" Canvas.Top="360"
                        Width="100" Height="25"/>

                <Button Content="Продолжить" Canvas.Left="260" Canvas.Top="400"
                        Width="150" Height="25"/>
            </Canvas>
        </ScrollViewer>
    </Grid>
</Page>
