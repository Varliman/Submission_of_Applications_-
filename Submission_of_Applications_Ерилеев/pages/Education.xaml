<Page x:Class="Submission_of_Applications_Ерилеев.pages.Education"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_Ерилеев.pages"
      mc:Ignorable="d"
      Title="Education"
      d:DesignHeight="500" d:DesignWidth="450">

    <!-- Общий фон -->
    <Grid Background="#F8F9FA">
        <!-- Верхняя панель -->
        <Grid Height="60" VerticalAlignment="Top" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0"
                   VerticalAlignment="Top" Width="40" Source="/i.webp"/>
            <Label Content="Электронная приемная комиссия"
                   HorizontalAlignment="Left" Margin="55,1,0,0"
                   VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
            <Label Content="МЦК-ЧЭМК Минобразования Чувашии" 
       HorizontalAlignment="Left" Margin="55,24,0,0" VerticalAlignment="Top"/>
        </Grid>

        <ScrollViewer Margin="0,60,0,0" VerticalScrollBarVisibility="Auto">
            <Grid Background="#F8F9FA">

                <Label Content="Сведения об образовании" 
               HorizontalAlignment="Left" Margin="10,10,0,0" 
               VerticalAlignment="Top" FontWeight="Bold"/>

                <Label Content="База:" HorizontalAlignment="Left" 
               Margin="10,40,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

                <Label Content="Выберите один из вариантов:" HorizontalAlignment="Left" 
               Margin="10,65,0,0" VerticalAlignment="Top" Foreground="Red" FontSize="11"/>

                <RadioButton Content="9 классов" HorizontalAlignment="Left" Margin="25,85,0,0" VerticalAlignment="Top"/>
                <RadioButton Content="11 классов" HorizontalAlignment="Left" Margin="25,105,0,0" VerticalAlignment="Top"/>
                <RadioButton Content="СПО" HorizontalAlignment="Left" Margin="25,125,0,0" VerticalAlignment="Top"/>
                <RadioButton Content="ВПО" HorizontalAlignment="Left" Margin="25,145,0,0" VerticalAlignment="Top"/>

                <Label Content="Выберите один из вариантов:" HorizontalAlignment="Left" 
               Margin="10,175,0,0" VerticalAlignment="Top" Foreground="Red" FontSize="11"/>

                <RadioButton Content="Аттестат" HorizontalAlignment="Left" Margin="25,195,0,0" VerticalAlignment="Top"/>
                <RadioButton Content="Диплом" HorizontalAlignment="Left" Margin="25,215,0,0" VerticalAlignment="Top"/>

                <Label Content="Серия и номер документа об образовании:" 
               HorizontalAlignment="Left" Margin="10,249,0,0" 
               VerticalAlignment="Top" FontSize="10"/>
                <TextBox HorizontalAlignment="Left" Margin="12,275,0,0" VerticalAlignment="Top" Width="200" Height="24"/>

                <Label Content="Средний балл (до сотых):" 
               HorizontalAlignment="Left" Margin="245,250,0,0" 
               VerticalAlignment="Top" FontSize="10"/>
                <TextBox HorizontalAlignment="Left" Margin="245,275,0,0" VerticalAlignment="Top" Width="150" Height="24"/>

                <Label Content="Прикрепите скан страниц документа об образовании"
               HorizontalAlignment="Left" Margin="10,310,0,0" VerticalAlignment="Top" FontSize="11"/>

                <Label Content="Выберите документ"
               HorizontalAlignment="Left" Margin="10,335,0,0" VerticalAlignment="Top" 
               Foreground="Red" FontSize="8"/>

                <TextBox HorizontalAlignment="Left" Margin="12,360,0,0" VerticalAlignment="Top" Width="300" Height="24" TextWrapping="Wrap"/>
                <Button Content="Выбрать..." HorizontalAlignment="Left" Margin="320,360,0,0" VerticalAlignment="Top"
                Width="100" Height="25"/>

                <Button Content="Продолжить" Click="Button_Click" HorizontalAlignment="Left" Margin="260,400,0,0" VerticalAlignment="Top"
                Width="150" Height="25"/>

            </Grid>
        </ScrollViewer>

    </Grid>
</Page>
