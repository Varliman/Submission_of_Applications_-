<Page x:Class="Submission_of_Applications_Ерилеев.pages.Contacts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450"
      Title="Contacts" Width="400"
      >

    <Grid Background="#F8F9FA">
        <!-- Верхняя панель -->
        <Border Background="White" Padding="10" CornerRadius="5">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <Image Source="/i.webp" Width="40" Height="40" Margin="0,0,10,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Электронная приемная комиссия" FontWeight="Bold" FontSize="19"/>
                    <TextBlock Text="МЦК-ЧЭМК Минобразования Чувашии"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Контакты -->
        <StackPanel Margin="0,80,0,0">
            <TextBlock Text="Контакты" FontWeight="Bold" Margin="10,0,0,0"/>

            <Label Content="Мобильный номер" Margin="10,0,0,0"/>
            <TextBox Height="24" Margin="10,10,10,0" TextWrapping="Wrap" Text=""
                     VerticalAlignment="Top"/>

            <Label Content="Домашний номер" Margin="10,10,0,0"/>
            <TextBox Height="24" Margin="10,10,10,0" TextWrapping="Wrap" Text=""
                     VerticalAlignment="Top"/>

            <Label Content="Электронный адрес" Margin="10,10,0,0"/>
            <TextBox Height="24" Margin="10,10,10,0" TextWrapping="Wrap" Text=""
                    VerticalAlignment="Top"/>

            <Button Content="Продолжить" Click="Button_Click" Width="150" Height="25" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
