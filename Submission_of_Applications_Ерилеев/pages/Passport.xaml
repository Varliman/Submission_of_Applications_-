<Page x:Class="Submission_of_Applications_Ерилеев.pages.Passport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_Ерилеев.pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Passport">

    <Grid Background="#F8F9FA">
        <!-- ======== ВЕРХНЯЯ ПАНЕЛЬ (та же, не трогаем) ======== -->
        <Grid Margin="0,0,0,530" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0"
                   VerticalAlignment="Top" Width="40" Source="/i.webp"/>
            <Label Content="Электронная приемная компания" 
                   HorizontalAlignment="Left" Margin="55,1,0,0"
                   VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
            <Label Content="МЦК-ЧЭМК Минобразования Чувашии" 
                   HorizontalAlignment="Left" Margin="55,24,0,0" VerticalAlignment="Top"/>
        </Grid>

        <!-- ======== ОСНОВНОЙ БЛОК ======== -->
        <Grid Margin="0,60,0,0">

            <Label Content="Паспортные данные" HorizontalAlignment="Left" Margin="10,10,0,0"
                   VerticalAlignment="Top" FontWeight="Bold"/>

            <Label Content="Фамилия:" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="150,47,0,0" VerticalAlignment="Top" Width="180"/>

            <Label Content="Имя:" HorizontalAlignment="Left" Margin="370,45,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="420,47,0,0" VerticalAlignment="Top" Width="180"/>

            <Label Content="Отчество:" HorizontalAlignment="Left" Margin="630,45,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="700,47,0,0" VerticalAlignment="Top" Width="180"/>

            <Label Content="Дата рождения:" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top"/>
            <DatePicker HorizontalAlignment="Left" Margin="150,87,0,0" VerticalAlignment="Top" Width="180"/>

            <Label Content="Гражданство:" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="150,127,0,0" VerticalAlignment="Top" Width="300"/>

            <Label Content="Место рождения:" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="150,167,0,0" VerticalAlignment="Top" Width="730"/>

            <Label Content="Серия и номер паспорта:" HorizontalAlignment="Left" Margin="10,205,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="150,207,0,0" VerticalAlignment="Top" Width="180"/>

            <Label Content="Дата выдачи:" HorizontalAlignment="Left" Margin="370,205,0,0" VerticalAlignment="Top"/>
            <DatePicker HorizontalAlignment="Left" Margin="470,207,0,0" VerticalAlignment="Top" Width="180"/>

            <Label Content="Код подразделения:" HorizontalAlignment="Left" Margin="670,205,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="800,207,0,0" VerticalAlignment="Top" Width="80"/>

            <Label Content="Кем выдан:" HorizontalAlignment="Left" Margin="10,245,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="150,247,0,0" VerticalAlignment="Top" Width="730"/>

            <Label Content="Адрес по прописке:" HorizontalAlignment="Left" Margin="10,285,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="150,287,0,0" VerticalAlignment="Top" Width="530"/>
            <Label Content="Район:" HorizontalAlignment="Left" Margin="700,285,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="750,287,0,0" VerticalAlignment="Top" Width="130"/>

            <Label Content="Адрес проживания фактический:" HorizontalAlignment="Left" Margin="10,325,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="200,327,0,0" VerticalAlignment="Top" Width="480"/>
            <Label Content="Район:" HorizontalAlignment="Left" Margin="700,325,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="750,327,0,0" VerticalAlignment="Top" Width="130"/>

            <Label Content="Прикрепите сканы страниц паспорта с фотографией и действующей пропиской"
                   HorizontalAlignment="Left" Margin="10,370,0,0" VerticalAlignment="Top" Width="870" 
                   />

            <Label Content="Выберите документы"
                   HorizontalAlignment="Left" Margin="10,395,0,0" VerticalAlignment="Top" Foreground="Red" FontSize="11"/>

            <TextBox HorizontalAlignment="Left" Margin="10,420,0,0" VerticalAlignment="Top" Width="760" Height="25"/>
            <Button Content="Выбрать..." HorizontalAlignment="Left" Margin="780,420,0,0" VerticalAlignment="Top" Width="100"/>

            <Button Content="Продолжить" HorizontalAlignment="Left" Margin="370,460,0,0" VerticalAlignment="Top"
                    Width="150" Height="25"/>
        </Grid>
    </Grid>
</Page>
