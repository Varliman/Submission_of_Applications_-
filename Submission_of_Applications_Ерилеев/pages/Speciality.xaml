<Page x:Class="Submission_of_Applications_Ерилеев.pages.Speciality"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="Statement"
      Height="530" Width="500">

    <Grid Background="#F8F9FA">
        <!-- Верхняя панель (оставляем как есть) -->
        <Grid Height="60" VerticalAlignment="Top" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0"
                   VerticalAlignment="Top" Width="40" Source="/i.webp"/>
            <Label Content="Электронная приемная комиссия"
                   HorizontalAlignment="Left" Margin="55,1,0,0"
                   VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
        </Grid>

        <!-- Основное содержимое -->
        <ScrollViewer Margin="0,60,0,0" VerticalScrollBarVisibility="Auto">
            <Grid Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <Label Grid.Row="0" Content="Специальности" FontWeight="Bold" />

                <Label Grid.Row="1" Content="Выберите специальность, на которой желаете учиться:"/>
                <Label Grid.Row="2" Content="Можно выбрать несколько специальностей"
                       Foreground="Red" FontSize="10"/>

                <!-- Список специальностей -->
                <StackPanel Grid.Row="3" Margin="15,5,0,0">
                    <CheckBox Content="09.02.06 Сетевое и системное администрирование"/>
                    <CheckBox Content="09.02.07 Информационные системы и программирование"/>
                    <CheckBox Content="10.02.04 Обеспечение информационной безопасности телекоммуникационных систем"/>
                    <CheckBox Content="11.02.15 Инфокоммуникационные сети и системы связи" />
                    <CheckBox Content="11.02.16 Монтаж, техническое обслуживание и ремонт электронных приборов и устройств" />
                    <CheckBox Content="13.02.13 Эксплуатация и обслуживание электрического и электромеханического оборудования (по отраслям)" />
                    <CheckBox Content="15.02.16 Технология машиностроения"/>
                    <CheckBox Content="15.02.17 Монтаж, техническое обслуживание и ремонт промышленного оборудования (по отраслям)"/>
                    <CheckBox Content="15.02.08 Техническая эксплуатация и обслуживание роботизированного производства (по отраслям)" />
                    <CheckBox Content="20.02.01 Экологическая безопасность природных комплексов"/>
                </StackPanel>

                <!-- Среднее проф. образование -->
                <Label Grid.Row="4" Content="Среднее профессиональное образование получаю:" Margin="0,10,0,0"/>
                <Label Grid.Row="5" Content="Выберите один из вариантов:" Foreground="Red" FontSize="10"/>

                <StackPanel Grid.Row="6" Margin="15,5,0,0">
                    <RadioButton Content="впервые"/>
                    <RadioButton Content="не впервые"/>
                </StackPanel>

                <!-- Ознакомление -->
                <StackPanel Grid.Row="7" Margin="0,10,0,0">
                    <CheckBox Content="С лицензией на право осуществления образовательной деятельности,&#x0a;свидетельством о государственной аккредитации, правилами приёма и&#x0a;правилами внутреннего распорядка обучающихся ознакомлен(а)"
                              />
                    <CheckBox Content="С датой представления оригиналов документов ознакомлен(а)"/>
                </StackPanel>

                <!-- Кнопка -->
                <Button Grid.Row="8" Content="Продолжить" Width="150" Height="25"
                        HorizontalAlignment="Right" Margin="0,15,0,0"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
